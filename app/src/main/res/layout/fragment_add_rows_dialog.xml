<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="25dp"
    android:id="@+id/add_rows_dialog_container">

    <ImageView
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/close_button_for_dialog"
        android:src="@drawable/close_white"
        android:padding="4dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/topText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/close_button"
        android:text="Add More Row:"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/input_rows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topText"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:padding="7dp"
        android:inputType="number"
        android:background="@drawable/dialog_input_background"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/input_rows"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/dialog_button_background"
        android:textColor="@color/white"
        android:text="Ok"
        android:layout_marginBottom="25dp"
        />
</RelativeLayout>